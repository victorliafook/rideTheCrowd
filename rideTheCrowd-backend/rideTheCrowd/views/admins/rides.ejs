<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h2>Rides Registered</h2>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Activity</th>
              <th>Country</th>
              <th>City</th>
              <th>Address</th>
              <th>Date</th>
              <th>Created</th>
              <th></th>
            </tr>

          </thead>
          <tbody>
            <% _.each(rides, function(r){ %>
              <tr>
                <td>
                  <%= r.id %>
                </td>
                <td>
                  <%= r.name %>
                </td>
                <td>
                  <%= r.activity != null ? r.activity.name : '' %>
                </td>
                <td>
                  <%= r.country %>
                </td>
                <td>
                  <%= r.city %>
                </td>
                <td>
                  <%= r.address %>
                </td>
                <td>
                  <%= sails.moment(r.datetime).format('MM-DD-YYYY h:mm:ss a') %>
                </td>
                <td>
                  <%= sails.moment(r.createdAt).format('MM-DD-YYYY h:mm:ss a') %>
                </td>
                <td>
                  <a href="/admins/editride/<%= r.id %>" class="btn btn-primary">Edit</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
