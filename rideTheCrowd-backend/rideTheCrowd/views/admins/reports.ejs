<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h2>Reports</h2>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Ride</th>
              <th>User</th>
              <th>Text</th>
              <th>Created</th>
            </tr>

          </thead>
          <tbody>
            <% _.each(reports, function(r){ %>
              <tr>
                <td>
                  <%= r.ride.name %>
                </td>
                <td>
                  <%= r.user.firstname %>
                </td>
                <td>
                  <%= r.text %>
                </td>
                <td>
                  <%= r.city %>
                </td>
                <td>
                  <%= r.createdAt %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
