<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h2>Activities Registered</h2>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Description</th>
              <th>Created</th>
            </tr>

          </thead>
          <tbody>
            <% _.each(activities, function(a){ %>
              <tr>
                <td>
                  <%= a.id %>
                </td>
                <td>
                  <%= a.name %>
                </td>
                <td>
                  <%= a.description %>
                </td>
                <td>
                  <%= sails.moment(a.createdAt).format('MM-DD-YYYY h:mm:ss a') %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-lg-12">
      <a href="/admins/addactivity" class="btn btn-primary">Create a new activity</a>
    </div>
  </div>
</div>
